{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "API_KEY",
    "USER_ID",
    "REVALIDATE_SECRET"
  ],
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        ".vercel/**",
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "API_KEY",
        "USER_ID",
        "REVALIDATE_SECRET"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": [
        "^build",
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^build",
        "^check-types"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "build:styles": {
      "outputs": [
        "dist/**"
      ],
      "env": [
        "API_KEY",
        "USER_ID",
        "REVALIDATE_SECRET"
      ]
    },
    "build:components": {
      "outputs": [
        "dist/**"
      ],
      "env": [
        "API_KEY",
        "USER_ID",
        "REVALIDATE_SECRET"
      ]
    }
  }
}