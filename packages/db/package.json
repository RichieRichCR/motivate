{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "generate": "op run --env-file=.env -- pnpm drizzle-kit generate",
    "migrate": "op run --env-file=.env -- pnpm drizzle-kit migrate",
    "push": "op run --env-file=.env -- pnpm drizzle-kit push",
    "pull": "op run --env-file=.env -- pnpm drizzle-kit pull",
    "check": "op run --env-file=.env -- pnpm drizzle-kit check",
    "up": "op run --env-file=.env -- pnpm drizzle-kit up",
    "studio": "op run --env-file=.env -- pnpm drizzle-kit studio",
    "apply-rls": "op run --env-file=.env -- tsx src/migrations/apply-rls.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.20.6"
  }
}